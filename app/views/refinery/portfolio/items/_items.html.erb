

<%- if items.first.gallery.present? -%>
<div class="image-popup" href="#">
  <div class="prod-title">
    <h3><%= items.first.gallery.title %></h3>
     <div class="details">
      <% if ::Refinery::Portfolio.display_gallery_text %>
        <%= raw items.first.gallery.description %>
      <% end %>
    </div>
    <!-- <a href="#" class="btn btn-primary">Read More</a> -->
  </div>
</div> 
<%- end -%>
<%- if items.present? -%>
  <div class='slideshow' id='gallery_images'>
    <ul>
      <%= render items %>
    </ul>
  </div>
<%- end -%>
